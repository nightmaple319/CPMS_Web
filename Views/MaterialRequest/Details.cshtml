@model MaterialRequest
@{
    ViewData["Title"] = "領料單詳情";
}

<div class="row">
    <div class="col-12">
        <!-- 基本資訊卡片 -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-info-circle"></i>
                    領料單資訊 - @Model.RequestNo
                </h3>
                <div class="card-tools">
                    @switch (Model.Status)
                    {
                        case "PENDING":
                            <span class="badge badge-warning badge-lg">待審核</span>
                            break;
                        case "APPROVED":
                            <span class="badge badge-success badge-lg">已核准</span>
                            break;
                        case "REJECTED":
                            <span class="badge badge-danger badge-lg">已駁回</span>
                            break;
                        case "ISSUED":
                            <span class="badge badge-info badge-lg">已出庫</span>
                            break;
                        default:
                            <span class="badge badge-secondary badge-lg">@Model.Status</span>
                            break;
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-sm table-borderless">
                            <tr>
                                <td class="font-weight-bold" style="width: 30%;">領料單號:</td>
                                <td>@Model.RequestNo</td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">申請日期:</td>
                                <td>@Model.RequestDate.ToString("yyyy-MM-dd HH:mm")</td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">申請人:</td>
                                <td>@(Model.Requester?.UserName ?? "")</td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">申請部門:</td>
                                <td>@Model.Department</td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">狀態:</td>
                                <td>
                                    @switch (Model.Status)
                                    {
                                        case "PENDING":
                                            <span class="badge badge-warning">待審核</span>
                                            break;
                                        case "APPROVED":
                                            <span class="badge badge-success">已核准</span>
                                            break;
                                        case "REJECTED":
                                            <span class="badge badge-danger">已駁回</span>
                                            break;
                                        case "ISSUED":
                                            <span class="badge badge-info">已出庫</span>
                                            break;
                                        default:
                                            <span class="badge badge-secondary">@Model.Status</span>
                                            break;
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-sm table-borderless">
                            <tr>
                                <td class="font-weight-bold" style="width: 30%;">審核者:</td>
                                <td>@(Model.Approver?.UserName ?? "-")</td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">審核日期:</td>
                                <td>@(Model.ApprovalDate?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">出庫者:</td>
                                <td>@(Model.Issuer?.UserName ?? "-")</td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">出庫日期:</td>
                                <td>@(Model.IssueDate?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">建立日期:</td>
                                <td>@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                            </tr>
                        </table>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Remarks))
                {
                    <div class="row">
                        <div class="col-12">
                            <hr>
                            <div class="form-group">
                                <label class="font-weight-bold">備註:</label>
                                <p class="border p-2 bg-light">@Model.Remarks</p>
                            </div>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.RejectReason))
                {
                    <div class="row">
                        <div class="col-12">
                            <hr>
                            <div class="alert alert-danger">
                                <h6><i class="fas fa-exclamation-triangle"></i> 駁回原因:</h6>
                                <p class="mb-0">@Model.RejectReason</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="card-footer">
                <div class="btn-group">
                    @if ((User.IsInRole("SuperAdmin") || User.IsInRole("Manager")) && Model.Status == "PENDING")
                    {
                        <a asp-action="Approve" asp-route-id="@Model.Id" class="btn btn-success">
                            <i class="fas fa-check"></i> 審核
                        </a>
                    }
                    @if ((User.IsInRole("SuperAdmin") || User.IsInRole("Manager")) && Model.Status == "APPROVED")
                    {
                        <button type="button" class="btn btn-primary" onclick="issueRequest(@Model.Id)">
                            <i class="fas fa-shipping-fast"></i> 執行出庫
                        </button>
                    }
                </div>
                <a asp-action="Index" class="btn btn-secondary float-right">
                    <i class="fas fa-arrow-left"></i> 返回列表
                </a>
            </div>
        </div>

        <!-- 領料明細 -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-list"></i>
                    領料明細
                </h3>
                <div class="card-tools">
                    <span class="badge badge-info">共 @Model.MaterialRequestDetails.Count 項</span>
                </div>
            </div>
            <div class="card-body">
                @if (Model.MaterialRequestDetails.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>編號</th>
                                    <th>備品描述</th>
                                    <th>規格</th>
                                    <th>分類</th>
                                    <th>申請數量</th>
                                    <th>核准數量</th>
                                    <th>已發數量</th>
                                    <th>當前庫存</th>
                                    <th>狀態</th>
                                    <th>備註</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model.MaterialRequestDetails)
                                {
                                    <tr>
                                        <td>@detail.SparePartNo</td>
                                        <td>@detail.SparePart.Description</td>
                                        <td>@detail.SparePart.Specification</td>
                                        <td>@detail.SparePart.Category</td>
                                        <td>
                                            <span class="badge badge-primary">@detail.RequestedQuantity</span>
                                        </td>
                                        <td>
                                            @if (Model.Status == "PENDING")
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                            else
                                            {
                                                <span class="badge @(detail.ApprovedQuantity == detail.RequestedQuantity ? "badge-success" : "badge-warning")">
                                                    @detail.ApprovedQuantity
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            @if (Model.Status == "ISSUED")
                                            {
                                                <span class="badge badge-info">@detail.IssuedQuantity</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge @(detail.SparePart.Quantity == 0 ? "badge-danger" : detail.SparePart.Quantity <= 5 ? "badge-warning" : "badge-success")">
                                                @detail.SparePart.Quantity
                                            </span>
                                        </td>
                                        <td>
                                            @if (Model.Status == "PENDING")
                                            {
                                                <span class="badge badge-secondary">待審核</span>
                                            }
                                            else if (Model.Status == "APPROVED")
                                            {
                                                @if (detail.ApprovedQuantity == 0)
                                                {
                                                    <span class="badge badge-danger">未核准</span>
                                                }
                                                else if (detail.ApprovedQuantity < detail.RequestedQuantity)
                                                {
                                                    <span class="badge badge-warning">部分核准</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-success">全部核准</span>
                                                }
                                            }
                                            else if (Model.Status == "ISSUED")
                                            {
                                                <span class="badge badge-info">已出庫</span>
                                            }
                                            else if (Model.Status == "REJECTED")
                                            {
                                                <span class="badge badge-danger">已駁回</span>
                                            }
                                        </td>
                                        <td>
                                            @(string.IsNullOrEmpty(detail.Remarks) ? "-" : detail.Remarks)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="bg-light">
                                    <th colspan="4">合計</th>
                                    <th>
                                        <span class="badge badge-primary badge-lg">
                                            @Model.MaterialRequestDetails.Sum(d => d.RequestedQuantity)
                                        </span>
                                    </th>
                                    <th>
                                        @if (Model.Status != "PENDING")
                                        {
                                            <span class="badge badge-success badge-lg">
                                                @Model.MaterialRequestDetails.Sum(d => d.ApprovedQuantity)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </th>
                                    <th>
                                        @if (Model.Status == "ISSUED")
                                        {
                                            <span class="badge badge-info badge-lg">
                                                @Model.MaterialRequestDetails.Sum(d => d.IssuedQuantity)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </th>
                                    <th colspan="3"></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-inbox fa-3x mb-3"></i>
                        <p>此領料單沒有任何項目</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function issueRequest(requestId) {
            if (confirm('確定要執行出庫作業嗎？此操作將會扣減庫存數量。')) {
                // 創建表單並提交
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("IssueRequest", "MaterialRequest")';

                var input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'id';
                input.value = requestId;
                form.appendChild(input);

                // 添加防偽令牌
                var token = $('input[name="__RequestVerificationToken"]').val();
                if (token) {
                    var tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token;
                    form.appendChild(tokenInput);
                }

                document.body.appendChild(form);
                form.submit();
            }
        }

        $(document).ready(function() {
            // 工具提示
            $('[data-toggle="tooltip"]').tooltip();

            // 如果是已駁回狀態，自動展開駁回原因
        @if (Model.Status == "REJECTED")
        {
            <text>
                    // 可以在這裡添加特殊的UI效果
            </text>
        }
        });
    </script>

    <!-- 防偽令牌 -->
    @Html.AntiForgeryToken()
}