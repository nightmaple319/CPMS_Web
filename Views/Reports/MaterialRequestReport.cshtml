@model IEnumerable<CPMS_Web.Models.MaterialRequestReport>
@{
    ViewData["Title"] = "物料申請報表";
}

<div class="container-fluid">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="startDate" class="form-label">開始日期</label>
                    <input type="date" class="form-control" id="startDate" name="startDate"
                           value="@(ViewBag.StartDate ?? DateTime.Today.AddMonths(-1).ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-4">
                    <label for="endDate" class="form-label">結束日期</label>
                    <input type="date" class="form-control" id="endDate" name="endDate"
                           value="@(ViewBag.EndDate ?? DateTime.Today.ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">查詢</button>
                    <a href="@Url.Action("ExportMaterialRequestReport", new { startDate = ViewBag.StartDate, endDate = ViewBag.EndDate })"
                       class="btn btn-success">匯出 Excel</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>申請日期</th>
                            <th>申請單號</th>
                            <th>申請人</th>
                            <th>部門</th>
                            <th>狀態</th>
                            <th>項目數量</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RequestDate.ToString("yyyy-MM-dd")</td>
                                <td>@item.RequestNumber</td>
                                <td>@item.RequesterName</td>
                                <td>@item.Department</td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case "PENDING":
                                            <span class="badge bg-warning">待審核</span>
                                            break;
                                        case "APPROVED":
                                            <span class="badge bg-success">已核准</span>
                                            break;
                                        case "REJECTED":
                                            <span class="badge bg-danger">已駁回</span>
                                            break;
                                        case "ISSUED":
                                            <span class="badge bg-info">已出庫</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@item.Status</span>
                                            break;
                                    }
                                </td>
                                <td>@item.TotalItems</td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">查詢期間內無申請記錄</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>