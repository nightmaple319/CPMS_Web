<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - 廠務備品管理系統</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/adminlte/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/adminlte/css/adminlte.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                @if (User.Identity!.IsAuthenticated)
                {
                    <!-- User Account Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link" data-toggle="dropdown" href="#">
                            <i class="far fa-user"></i>
                            <span class="d-none d-md-inline-block ml-1">@User.Identity.Name</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-user mr-2"></i> 個人資料
                            </a>
                            <div class="dropdown-divider"></div>
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post" class="dropdown-item p-0">
                                <button type="submit" class="btn btn-link dropdown-item text-left">
                                    <i class="fas fa-sign-out-alt mr-2"></i> 登出
                                </button>
                            </form>
                        </div>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                            <i class="fas fa-sign-in-alt"></i> 登入
                        </a>
                    </li>
                }
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index", "Home")" class="brand-link">
                <i class="fas fa-tools brand-image img-circle elevation-3" style="opacity: .8; margin-left: 10px; font-size: 1.5rem;"></i>
                <span class="brand-text font-weight-light">CPMS 備品管理</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                @if (User.Identity!.IsAuthenticated)
                {
                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <!-- Dashboard -->
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Home")" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>儀表板</p>
                                </a>
                            </li>

                            <!-- 庫存管理 -->
                            <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Inventory" ? "menu-open" : "")">
                                <a href="#" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Inventory" ? "active" : "")">
                                    <i class="nav-icon fas fa-boxes"></i>
                                    <p>
                                        庫存管理
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("Index", "Inventory")" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Inventory" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>庫存查詢</p>
                                        </a>
                                    </li>
                                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Manager"))
                                    {
                                        <li class="nav-item">
                                            <a href="@Url.Action("Create", "Inventory")" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Inventory" && ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>新增備品</p>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>

                            <!-- 領料管理 -->
                            <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "MaterialRequest" ? "menu-open" : "")">
                                <a href="#" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "MaterialRequest" ? "active" : "")">
                                    <i class="nav-icon fas fa-clipboard-list"></i>
                                    <p>
                                        領料管理
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("Index", "MaterialRequest")" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "MaterialRequest" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>領料單列表</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("Create", "MaterialRequest")" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "MaterialRequest" && ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>建立領料單</p>
                                        </a>
                                    </li>
                                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Manager"))
                                    {
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "MaterialRequest", new { status = "PENDING" })" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>待審核</p>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>

                            <!-- 盤點管理 -->
                            <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "StockCount" ? "menu-open" : "")">
                                <a href="#" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "StockCount" ? "active" : "")">
                                    <i class="nav-icon fas fa-clipboard-check"></i>
                                    <p>
                                        盤點管理
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("Index", "StockCount")" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "StockCount" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>盤點單列表</p>
                                        </a>
                                    </li>
                                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Manager"))
                                    {
                                        <li class="nav-item">
                                            <a href="@Url.Action("Create", "StockCount")" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "StockCount" && ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>建立盤點單</p>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>

                            <!-- 報表管理 -->
                            @if (User.IsInRole("SuperAdmin") || User.IsInRole("Manager"))
                            {
                                <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "menu-open" : "")">
                                    <a href="#" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")">
                                        <i class="nav-icon fas fa-chart-bar"></i>
                                        <p>
                                            報表管理
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a href="@Url.Action("InventoryReport", "Reports")" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>庫存報表</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("MaterialRequestReport", "Reports")" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>領料報表</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("StockCountReport", "Reports")" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>盤點報表</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                }
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewData["Title"]</h1>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <!-- 系統訊息 -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <i class="icon fas fa-check"></i> @TempData["Success"]
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <i class="icon fas fa-ban"></i> @TempData["Error"]
                        </div>
                    }
                    @if (TempData["Warning"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <i class="icon fas fa-exclamation-triangle"></i> @TempData["Warning"]
                        </div>
                    }
                    @if (TempData["Info"] != null)
                    {
                        <div class="alert alert-info alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <i class="icon fas fa-info"></i> @TempData["Info"]
                        </div>
                    }

                    @RenderBody()
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>版本</b> 1.0.0
            </div>
            <strong>Copyright &copy; 2025 廠務備品管理系統.</strong> 版權所有.
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/adminlte/js/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/adminlte/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/adminlte/js/adminlte.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>