@model SparePart
@{
    ViewData["Title"] = "編輯備品";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-edit"></i>
                    @ViewData["Title"] - @Model.No
                </h3>
            </div>
            <form asp-action="Edit" method="post">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display: none;"></div>

                    <input asp-for="No" type="hidden" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PlantId" class="form-label">
                                    <i class="fas fa-industry"></i> @Html.DisplayNameFor(m => m.PlantId)
                                </label>
                                <input asp-for="PlantId" class="form-control" placeholder="輸入廠區代碼">
                                <span asp-validation-for="PlantId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PositionId" class="form-label">
                                    <i class="fas fa-map-marker-alt"></i> @Html.DisplayNameFor(m => m.PositionId)
                                </label>
                                <input asp-for="PositionId" class="form-control" placeholder="輸入位置代碼">
                                <span asp-validation-for="PositionId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SubPositionId" class="form-label">
                                    <i class="fas fa-location-arrow"></i> @Html.DisplayNameFor(m => m.SubPositionId)
                                </label>
                                <input asp-for="SubPositionId" class="form-control" placeholder="輸入子位置代碼">
                                <span asp-validation-for="SubPositionId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Category" class="form-label">
                                    <i class="fas fa-tags"></i> @Html.DisplayNameFor(m => m.Category)
                                </label>
                                <input asp-for="Category" class="form-control" placeholder="輸入分類">
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label">
                            <i class="fas fa-align-left"></i> @Html.DisplayNameFor(m => m.Description)
                        </label>
                        <input asp-for="Description" class="form-control" placeholder="輸入備品描述" required>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Specification" class="form-label">
                            <i class="fas fa-list-ul"></i> @Html.DisplayNameFor(m => m.Specification)
                        </label>
                        <input asp-for="Specification" class="form-control" placeholder="輸入備品規格">
                        <span asp-validation-for="Specification" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Quantity" class="form-label">
                                    <i class="fas fa-cubes"></i> @Html.DisplayNameFor(m => m.Quantity)
                                </label>
                                <input asp-for="Quantity" class="form-control" type="number" min="0" required>
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i> 修改數量會自動記錄異動記錄
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-clock"></i> 最後更新
                                </label>
                                <input value="@Model.LastUpdated.ToString("yyyy-MM-dd HH:mm")" class="form-control" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Remarks" class="form-label">
                            <i class="fas fa-sticky-note"></i> @Html.DisplayNameFor(m => m.Remarks)
                        </label>
                        <textarea asp-for="Remarks" class="form-control" rows="3" placeholder="輸入備註"></textarea>
                        <span asp-validation-for="Remarks" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.No" class="btn btn-info">
                                <i class="fas fa-eye"></i> 查看詳情
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> 返回列表
                            </a>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> 儲存變更
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // 表單驗證提示
            $('form').on('submit', function(e) {
                var isValid = $(this)[0].checkValidity();
                if (!isValid) {
                    e.preventDefault();
                    e.stopPropagation();

                    // 顯示驗證錯誤摘要
                    var summary = $('[data-valmsg-summary="true"]');
                    if (summary.length > 0) {
                        summary.show();
                    }
                }
                $(this).addClass('was-validated');
            });

            // 數量變更警告
            var originalQuantity = @Model.Quantity;
            $('#Quantity').on('change', function() {
                var newQuantity = parseInt($(this).val()) || 0;
                var diff = newQuantity - originalQuantity;

                if (diff !== 0) {
                    var message = diff > 0 ?
                        `將增加 ${diff} 個庫存` :
                        `將減少 ${Math.abs(diff)} 個庫存`;

                    if (!$('#quantity-warning').length) {
                        $(this).parent().append(
                            `<small id="quantity-warning" class="form-text text-warning">
                                <i class="fas fa-exclamation-triangle"></i> ${message}
                            </small>`
                        );
                    } else {
                        $('#quantity-warning').html(`<i class="fas fa-exclamation-triangle"></i> ${message}`);
                    }
                } else {
                    $('#quantity-warning').remove();
                }
            });
        });
    </script>
}