@model SparePart
@{
    ViewData["Title"] = "新增備品";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PlantId" class="form-label"></label>
                                    <input asp-for="PlantId" class="form-control" placeholder="輸入廠區代碼">
                                    <span asp-validation-for="PlantId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PositionId" class="form-label"></label>
                                    <input asp-for="PositionId" class="form-control" placeholder="輸入位置代碼">
                                    <span asp-validation-for="PositionId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SubPositionId" class="form-label"></label>
                                    <input asp-for="SubPositionId" class="form-control" placeholder="輸入子位置代碼">
                                    <span asp-validation-for="SubPositionId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Category" class="form-label"></label>
                                    <input asp-for="Category" class="form-control" placeholder="輸入分類">
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" class="form-control" placeholder="輸入備品描述" required>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Specification" class="form-label"></label>
                            <input asp-for="Specification" class="form-control" placeholder="輸入備品規格">
                            <span asp-validation-for="Specification" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label"></label>
                            <input asp-for="Quantity" class="form-control" type="number" min="0" required>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Remarks" class="form-label"></label>
                            <textarea asp-for="Remarks" class="form-control" rows="3" placeholder="輸入備註"></textarea>
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>返回列表
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>儲存
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}