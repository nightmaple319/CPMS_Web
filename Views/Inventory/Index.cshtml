@model SparePartSearchViewModel
@{
    ViewData["Title"] = "庫存查詢";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <h2>@ViewData["Title"]</h2>
            @if (User.IsInRole("SuperAdmin") || User.IsInRole("Manager"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>新增備品
                </a>
            }
        </div>
    </div>

    <!-- 搜尋條件 -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">搜尋條件</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label asp-for="PlantId" class="form-label"></label>
                        <input asp-for="PlantId" class="form-control" placeholder="輸入廠區代碼">
                    </div>
                    <div class="col-md-3">
                        <label asp-for="PositionId" class="form-label"></label>
                        <input asp-for="PositionId" class="form-control" placeholder="輸入位置代碼">
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Category" class="form-label"></label>
                        <input asp-for="Category" class="form-control" placeholder="輸入分類">
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" placeholder="輸入描述">
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Specification" class="form-label"></label>
                        <input asp-for="Specification" class="form-control" placeholder="輸入規格">
                    </div>
                    <div class="col-md-3">
                        <div class="form-check mt-4">
                            <input asp-for="ShowZeroStock" class="form-check-input" type="checkbox">
                            <label asp-for="ShowZeroStock" class="form-check-label"></label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-1"></i>搜尋
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-undo me-1"></i>清除
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- 搜尋結果 -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">搜尋結果 (共 @Model.TotalCount 筆)</h5>
        </div>
        <div class="card-body">
            @if (Model.Results.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>編號</th>
                                <th>廠區</th>
                                <th>位置</th>
                                <th>分類</th>
                                <th>描述</th>
                                <th>規格</th>
                                <th>數量</th>
                                <th>最後更新</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Results)
                            {
                                <tr>
                                    <td>@item.No</td>
                                    <td>@item.PlantId</td>
                                    <td>@item.PositionId</td>
                                    <td>@item.Category</td>
                                    <td>@item.Description</td>
                                    <td>@item.Specification</td>
                                    <td>
                                        <span class="badge @(item.Quantity == 0 ? "bg-danger" : item.Quantity <= 5 ? "bg-warning" : "bg-success")">
                                            @item.Quantity
                                        </span>
                                    </td>
                                    <td>@item.LastUpdated.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@item.No" class="btn btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (User.IsInRole("SuperAdmin") || User.IsInRole("Manager"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.No" class="btn btn-outline-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="AdjustQuantity" asp-route-id="@item.No" class="btn btn-outline-secondary">
                                                    <i class="fas fa-balance-scale"></i>
                                                </a>
                                            }
                                            @if (User.IsInRole("SuperAdmin"))
                                            {
                                                <a asp-action="Delete" asp-route-id="@item.No" class="btn btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- 分頁 -->
                @if (Model.TotalCount > Model.PageSize)
                {
                    <nav aria-label="分頁導航">
                        <ul class="pagination justify-content-center">
                            @{
                                var totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);
                                var currentPage = Model.PageIndex;
                            }

                            @if (currentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new {
                                        PageIndex = currentPage - 1,
                                        PlantId = Model.PlantId,
                                        PositionId = Model.PositionId,
                                        Category = Model.Category,
                                        Description = Model.Description,
                                        Specification = Model.Specification,
                                        ShowZeroStock = Model.ShowZeroStock
                                    })">上一頁</a>
                                </li>
                            }

                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new {
                                        PageIndex = i,
                                        PlantId = Model.PlantId,
                                        PositionId = Model.PositionId,
                                        Category = Model.Category,
                                        Description = Model.Description,
                                        Specification = Model.Specification,
                                        ShowZeroStock = Model.ShowZeroStock
                                    })">@i</a>
                                </li>
                            }

                            @if (currentPage < totalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new {
                                        PageIndex = currentPage + 1,
                                        PlantId = Model.PlantId,
                                        PositionId = Model.PositionId,
                                        Category = Model.Category,
                                        Description = Model.Description,
                                        Specification = Model.Specification,
                                        ShowZeroStock = Model.ShowZeroStock
                                    })">下一頁</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center text-muted py-4">
                    <i class="fas fa-search fa-3x mb-3"></i>
                    <p>沒有找到符合條件的備品</p>
                </div>
            }
        </div>
    </div>
</div>